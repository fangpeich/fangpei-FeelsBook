<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/intro_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="5dp"
        android:text="The Statistic of your past emotion count are listed below:"/>

    <TextView
        android:id="@+id/joy_count"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/love_count"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/surprise_count"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/anger_count"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/sadness_count"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/fear_count"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/static_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Back"/>

</LinearLayout>
